{
  "name": "node-rest-api-boilerplate",
  "version": "0.10.0",
  "description": "Boilerplate project for a restful node backend server powered by ES6 and Express",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && babel app -d build",
    "clean": "rm -rf build && mkdir build",
    "start": "nodemon",
    "test": "NODE_ENV=test mocha --recursive --reporter spec --compilers js:babel-register tests",
    "lint": "eslint app",
    "test:watch": "nodemon --exec 'npm run test' tests",
    "coverage": "NODE_ENV=test babel-node ./node_modules/.bin/isparta cover _mocha -- --recursive --reporter spec --compilers js:babel-register tests",
    "validate": "npm run test && npm outdated --depth 0"
  },
  "engines": {
    "node": "10.18.0",
    "npm": "6.9.x"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "express",
    "es6",
    "rest",
    "api",
    "boilerplate",
    "mongo"
  ],
  "author": "Adil Sikandar <ahafiz167@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/plugin-transform-async-to-generator": "^7.7.4",
    "babel-core": "7.0.0-bridge.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mailparser": "^2.7.7",
    "method-override": "^3.0.0",
    "mongoose": "^5.8.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "node": "^10.16.0",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.4.2",
    "serve": "^11.3.0",
    "stripe": "^8.3.0",
    "util": "^0.12.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-babel": "^5.3.0",
    "faker": "^4.1.0",
    "isparta": "^4.1.1",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.2"
  }
}
